<% include _header %>
    <%if (alert!=0) {
        alert.forEach(function(alert){%>
        <div id="Alert <%= alert.id %>" class="alert <%= color %>">
            <%= alert.mensaje %>
                <a id="close <%= alert.id %>" href="#" class="close" data-dismiss="alert">&times;</a>
        </div>
        <%});}%>
            <div class="row container">
                <div class="col-md-12">
                    <form action="new" method="post">
                        <div class="form-group">
                            <label for="">Nombre</label>
                            <input type="text" class="form-control" name="nombre">
                        </div>
                        <div class="form-group">
                            <label for="">Email</label>
                            <input type="text" class="form-control" name="email">
                        </div>
                        <div class="form-group">
                            <label for="">Password</label>
                            <input type="text" class="form-control" name="password">
                        </div>
                        <div class="form-group">
                            <select name="rol" class="form-control">
                                <option selected=true disabled>Rol</option>
                                <option value="Administrador">Administrador</option>
                                <option value="Normal">Normal</option>
                            </select>
                        </div>
                        <button class="btn btn-primary">Registrar usuario<i class="fas fa-plus text-light"></i></button>
                    </form>
                </div>
            </div>

            <script src="/jquery/jquery.min.js"></script>
            <script src="/js/bootstrap.min.js"></script>

            <%if (alert!=0) {
                alert.forEach(function(alert){%>
                <script type="text/javascript">
                    $('#close <%= alert.id %>').click(function() {
                        $('#Alert <%= alert.id %>').hide('fade');
                    })
                </script>
                <%});}%>

                    <% include _footer %>